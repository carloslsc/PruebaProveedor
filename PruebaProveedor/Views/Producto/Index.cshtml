
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary"> Lista de productos</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Crear nuevo prodcuto</a>
        </div>
    </div>

    <br />
    <br />
    <table id="tblProductos" class="table table-striped table-bordered" style="width:100%;">
        <thead>
            <tr>
                <th>Codigo</th>
                <th>Descripcion</th>
                <th>Unidad</th>
                <th>Costo</th>
                <th>Proveedor</th>
            </tr>
        </thead>
    </table>
</div>
@section scripts {
    <script src="~/js/producto.js"></script>
}
