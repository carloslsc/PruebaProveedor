@model PruebaProveedor.Modelos.ViewModels.ProductosVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<br />
<h3 class="text-center"> Crear un nuevo articulo</h3>
<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Producto.Codigo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Producto.Codigo" class="form-control" />
                    <span asp-validation-for="Producto.Codigo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Producto.Descripcion"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Producto.Descripcion" class="form-control" />
                    <span asp-validation-for="Producto.Descripcion" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Producto.Unidad"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Producto.Unidad" class="form-control" />
                    <span asp-validation-for="Producto.Unidad" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Producto.Costo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Producto.Costo" class="form-control" />
                    <span asp-validation-for="Producto.Costo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Producto.IdProveedorNavigation.RazonSocial"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Producto.IdProveedor, Model.ListaProveedores,
                        "-Por favor seleccione un proveedor-", new { @class = "form-control" })
                    <span asp-validation-for="Producto.IdProveedor" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control">Crear</button>
                            &nbsp;
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control">Volver a lista</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>